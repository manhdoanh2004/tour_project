// Top Header
.top-header
  .container
    .inner-wrap
      if (settingWebsiteInfo.phone)
        .inner-item
          i.fa-solid.fa-phone
          | #{settingWebsiteInfo.phone}
      if (settingWebsiteInfo.email)
      .inner-item
        i.fa-solid.fa-envelope
        | #{settingWebsiteInfo.email}
      if (settingWebsiteInfo.address)
        .inner-item
          i.fa-solid.fa-building
          | #{settingWebsiteInfo.address}
// End Top Header
// Header
header.header
  .container
    .inner-wrap
      // Menu Mobile
      button.inner-menu-mobile
        i.fa-solid.fa-bars
      // Logo
      .inner-logo
        a(href=`/` style="display :inline-flex; justify-content: center;align-items: center;gap: 5px; color:#4502C7 ")
          img(
            alt="JourneyEverywhere" 
            src=settingWebsiteInfo.logo
            )
          h1() #{settingWebsiteInfo.websiteName}
      // Menu
      -
        var test=[{
          link:"#",
          title:"Tour đã đặt"
        },
        {
          link:"#",
          title:"Tour đã đặt"
        },
        {
          link:"#",
          title:"Tour đã đặt"
        }]
      nav.inner-menu
        ul
          li
            a.active(href="/" style="max-width: 200px;") Trang chủ            
          each item in categoryList
            li
              a(href=`/category/${item.slug}`) #{item.name}
              if(item.children)
                i.fa-solid.fa-caret-down
                ul
                  each itemChild in item.children
                    li
                      a(href=`/category/${itemChild.slug}`) #{itemChild.name}
          li
              a(href="/infor") Tin tức
          li
              a(href="/contact") Liên hệ
          li
              a(href="/tracking?type=tourOrder") Tra cứu
              if(trackingTypes)
                i.fa-solid.fa-caret-down
                ul
                  each itemChild in trackingTypes
                    li
                      a(href=itemChild.link) #{itemChild.title}
        .inner-overlay
      // Cart
      .inner-cart
        a(href=`/cart`)
          img(
            alt="Cart" 
            src="/assets/images/icon-cart.svg"
            )
          span( mini-cart) 1
