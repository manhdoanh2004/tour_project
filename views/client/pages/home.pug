extends ../layouts/default.pug

block main
 .section-1
  .container
    .inner-wrap
      h1.inner-title(
        data-aos-duration="800" 
        data-aos="fade-up"
        )
        | Du lịch Châu Á - Khám phá Mỹ, Úc, Âu
        br
        | Đi nơi đâu bạn muốn
      p.inner-desc(
        data-aos-delay="150" 
        data-aos-duration="800" 
        data-aos="fade-up"
        )
        | Vinh hạnh của chúng tôi là mang đến cho bạn những chuyến đi đáng nhớ
      form.inner-form(
        form-search
        data-aos-delay="300" 
        data-aos-duration="800" 
        data-aos="fade-up" 
        action="#"
        )
        .inner-box.inner-address
          .inner-input-group
            img.inner-icon(src="/assets/images/icon-address.svg")
            input.inner-input(
              name="locationTo"
              placeholder="Bạn muốn đi đâu?" 
              type="text"
              )
            i.fa-solid.fa-angle-down.inner-down
          .inner-suggest
            .inner-suggest-title
              i.fa-solid.fa-location-dot
              | Địa Điểm Hot
            .inner-suggest-list
              .inner-item
                .inner-item-image
                  img(
                    alt="" 
                    src="/assets/images/product-1.jpg"
                    )
                .inner-item-content
                  .inner-item-title Nhật Bản
                  .inner-item-desc 50 tours
              .inner-item
                .inner-item-image
                  img(
                    alt="" 
                    src="/assets/images/product-2.jpg"
                    )
                .inner-item-content
                  .inner-item-title Phú Quốc
                  .inner-item-desc 50 tours
              .inner-item
                .inner-item-image
                  img(
                    alt="" 
                    src="/assets/images/product-3.jpg"
                    )
                .inner-item-content
                  .inner-item-title Singapore
                  .inner-item-desc 50 tours
        .inner-box.inner-user
          .inner-input-group
            img.inner-icon(src="/assets/images/icon-user.svg")
            input.inner-input(
              placeholder="Số lượng" 
              type="text"
               readonly)
            i.fa-solid.fa-angle-down.inner-down
          .inner-quantity
            .inner-item
              .inner-label Người lớn
              .inner-count
                span.inner-down -
                span.inner-number( stock-adult) 1
                span.inner-up +
            .inner-item
              .inner-label Trẻ em
              .inner-count
                span.inner-down -
                span.inner-number(stock-children) 0
                span.inner-up +
            .inner-item
              .inner-label Em bé
              .inner-count
                span.inner-down -
                span.inner-number(stock-baby) 0
                span.inner-up +
        .inner-box.inner-calendar
          .inner-input-group
            img.inner-icon(src="/assets/images/icon-calendar.svg")
            input.inner-input(type="date" name="departureDate" futureDate )
        button.inner-button(type="submit")
          i.fa-solid.fa-magnifying-glass
          | Tìm Kiếm
 
 .section-2(
  data-aos-delay="450" 
  data-aos-duration="800" 
  data-aos="fade-up"
  )
  .container
    .inner-wrap
      .inner-info
        h2.inner-title
          | ƯU ĐÃI 2025
          br
          | TOUR GIỜ CHÓT
        .inner-desc Một chuyến đi không chỉ là sự di chuyển, đó là một hành trình trải nghiệm
        .inner-clock-title Kết thúc sau
        .inner-clock-number(clock-expire="2025-08-15T15:00:00")
          span.inner-item
            .inner-number 00
            .inner-label Ngày
          span.inner-item
            .inner-number 00
            .inner-label Giờ
          span.inner-item
            .inner-number 00
            .inner-label Phút
          span.inner-item
            .inner-number 00
            .inner-label Giây
        .inner-discount-title GIẢM ĐẾN
        .inner-discount-price
          | 990.000
          span.inner-unit đ
      .inner-list
        .swiper.swiper-section-2
          .swiper-wrapper
            each item in tourListSection2
              .swiper-slide
                // Product Item
                -
                  const discount =parseInt(((item.priceAdult - item.priceNewAdult) / item.priceAdult)*100 )
                .product-item
                  .inner-image
                    a(href=`/tour/detail/${item.slug}`)
                      img(
                        alt=item.name 
                        src=item.avatar
                        )
                  .inner-discount
                    i.fa-solid.fa-bolt
                    | Giảm -#{discount}%
                  .inner-content
                    h3.inner-title
                      a(href=`/tour/detail/${item.slug}`) #{item.name }
                    .inner-prices
                      .inner-price-old
                        | #{item.priceAdult.toLocaleString("vi-VN")}
                        span.inner-unit đ
                      .inner-price-new
                        |  #{item.priceNewAdult.toLocaleString("vi-VN")}
                        span.inner-unit đ
                    .inner-desc
                      .inner-desc-item
                        | Mã Tour:
                        b 123456789
                      .inner-desc-item
                        | Ngày Khởi Hành:
                        b #{item.departureDateFormat}
                      .inner-desc-item
                        | Thời Gian:
                        b #{item.time}
                    .inner-meta
                      .inner-rating
                        .inner-stars
                          i.fa-solid.fa-star
                          i.fa-solid.fa-star
                          i.fa-solid.fa-star
                          i.fa-solid.fa-star
                          i.fa-solid.fa-star
                        .inner-number (5)
                      .inner-stock
                        .inner-label Số chỗ còn:
                        .inner-number #{item.stockAdult}
                // End Product Item
            
