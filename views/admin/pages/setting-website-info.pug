extends ../layouts/default.pug


block main
  h1.box-title Thông tin website
  if (permissions.includes("setting-websiteinfo"))
    .section-8
      form#setting-website-info-form
        .inner-group
          label(class="inner-label" for="websiteName") Tên website
          input(type="text" id="websiteName" name="websiteName" value=webSiteInfor.websiteName)
        .inner-group
          label(class="inner-label" for="phone") Số điện thoại
          input(type="text" id="phone" name="phone" value=webSiteInfor.phone)
        .inner-group
          label(class="inner-label" for="email") Email
          input(type="text" id="email" name="email" value=webSiteInfor.email)
        .inner-group
          label(class="inner-label" for="address") Địa chỉ
          input(type="text" id="address" name="address" value=webSiteInfor.address)
        .inner-group
          label(class="inner-label" for="logo") Logo
          div(class="inner-upload-image" image-default=webSiteInfor.logo)
            input(type="file" id="logo" accept="image/*"  filepond-image name="logo")
        .inner-group
          label(class="inner-label" for="favicon") Favicon
          div(class="inner-upload-image"  image-default=webSiteInfor.favicon)
            input(type="file" id="favicon" accept="image/*" filepond-image name="favicon")
        .inner-button.inner-two-col
          button Cập nhật
      .inner-back
        a(href="#") Quay lại danh sách